/* pages/financial-detail/financial-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部汇总信息 */
.summary-header {
  margin-bottom: 20rpx;
}

.summary-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  text-align: center;
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.summary-amount {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.income-color {
  color: #28a745;
}

.expense-color {
  color: #dc3545;
}

.summary-count {
  font-size: 24rpx;
  color: #888;
}

/* 操作按钮 */
.action-bar {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.refresh-btn {
  background-color: #3498db;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 详情列表 */
.detail-list {
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.list-header {
  padding: 30rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.list-scroll {
  max-height: calc(100vh - 400rpx);
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item:active {
  background-color: #f8f9fa;
}

.item-left {
  flex: 1;
  margin-right: 20rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.item-description {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.item-date {
  font-size: 22rpx;
  color: #999;
}

.item-right {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.item-amount {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.item-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  background-color: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.empty-description {
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .summary-amount {
    font-size: 42rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
  
  .item-amount {
    font-size: 28rpx;
  }
}