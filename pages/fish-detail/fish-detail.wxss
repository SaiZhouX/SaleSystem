/* pages/fish-detail/fish-detail.wxss */
.container {
  padding: 0;
  background-color: #f4f4f4;
  min-height: 100vh;
  width: 100%;
}

.photo-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  text-align: center;
}

.photo-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.fish-photo {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f8f8f8;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.photo-btn-center {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
}

.value {
  color: #333;
}

.barcode-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.barcode-canvas {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
}

.barcode-text {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  color: #333;
  background-color: #fafafa;
  letter-spacing: 2rpx;
}

.action-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 0 20rpx 20rpx;
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.button-row {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.sell-btn {
  background-color: #1aad19;
  color: #fff;
  flex: 1;
  border-radius: 8rpx;
}

.dead-btn {
  background-color: #e74c3c;
  color: #fff;
  flex: 1;
  border-radius: 8rpx;
}

/* 状态颜色样式 */
.status-instock {
  color: #3498db;
}

.status-sold {
  color: #1aad19;
}

.status-dead {
  color: #e74c3c;
}

/* 损失金额样式 */
.loss-amount {
  color: #e74c3c;
  font-weight: bold;
}
