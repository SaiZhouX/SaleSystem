.container {
  padding: 40rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.generate-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.generate-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 80rpx;
  background-color: #28a745;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(40, 167, 69, 0.3);
  margin-bottom: 30rpx;
}

.generate-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.generate-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

.qrcode-display {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 300rpx;
  height: 300rpx;
  background-color: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.qrcode-canvas {
  width: 120px;
  height: 120px;
  background-color: white;
}

.qrcode-image {
  width: 120px;
  height: 120px;
}

.qrcode-text {
  margin-top: 20rpx;
  padding: 10rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

.scan-section {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.scan-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 200rpx;
  height: 200rpx;
  background-color: #007aff;
  border-radius: 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.3);
}

.scan-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.scan-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  filter: brightness(0) invert(1);
}

.scan-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
}

.result-section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-content {
  font-size: 28rpx;
  color: #666;
  background-color: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  word-break: break-all;
}

.no-result {
  text-align: center;
  padding: 60rpx 0;
}

.no-result-text {
  font-size: 28rpx;
  color: #999;
}