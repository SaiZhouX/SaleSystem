/* pages/add-fish/add-fish.wxss */

.header {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: auto !important;
}

.header .batch-add-btn {
  background-color: #1aad19;
  color: white;
  height: 88rpx;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0;
  margin: 0;
  border: none;
  box-sizing: border-box;
  min-width: 0 !important;
  display: flex;
  justify-content: center;
  align-items: center;
  white-space: nowrap;
}
.container {
  position: relative;
  padding: 30rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background: #f5f5f5;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 45rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 120rpx;
  overflow: hidden;
}

.item-label {
  width: 150rpx;
  white-space: nowrap;
  flex-shrink: 0;
  padding-right: 15rpx;
  color: #333;
  font-weight: 500;
  text-overflow: clip;
}
.picker,
input {
  flex: 1;
  min-width: 40rpx;
  padding: 20rpx 15rpx;
  margin-left: 20rpx;
  color: #333;
  height: 80rpx;
  box-sizing: border-box;
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
}

.price-input {
  min-width: 45rpx;
  max-width: 180rpx;
  flex: none;
}

.notes-input {
  height: 200rpx;
  min-height: 200rpx;
  box-sizing: border-box;
}

.photo-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.photo-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.fish-photo {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f8f8f8;
}

.photo-placeholder {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.photo-btn-center {
  background-color: #3498db;
  color: #fff;
  border-radius: 8rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.barcode-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  text-align: center;
}

.barcode-canvas {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
}

.barcode-text-display {
  width: 100%;
  height: 120rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'Courier New', monospace;
  font-size: 24rpx;
  color: #333;
  background-color: #fafafa;
  letter-spacing: 2rpx;
}

form .submit-btn {
  margin-top: 60rpx;
  background-color: #1aad19;
  color: #fff;
  height: 88rpx;
  font-size: 32rpx;
  padding: 0;
  margin: 0 auto;
  border: none;
  border-radius: 8rpx;
  box-sizing: border-box;
  line-height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  min-width: 0 !important;
  white-space: nowrap;
}