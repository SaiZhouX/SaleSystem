/* pages/add-expense/add-expense.wxss */
.container {
  padding: 40rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}

.item-label {
  width: 150rpx;
}

.form-item .picker-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 80rpx;
}

input {
  flex: 1;
}

.submit-btn {
  margin-top: 60rpx;
  background-color: #1aad19;
  color: #fff;
}