<!--pages/add-expense/add-expense.wxml-->
<view class="container">
  <form bindsubmit="formSubmit">
    <view class="form-item">
      <text class="item-label">支出项目</text>
      <input name="item" type="text" placeholder="请输入支出项目" />
    </view>
    <view class="form-item">
      <text class="item-label">支出金额</text>
      <input name="amount" type="digit" placeholder="请输入支出金额" />
    </view>
    <view class="form-item">
      <text class="item-label">支出数量</text>
      <input name="quantity" type="digit" placeholder="请输入支出数量" />
    </view>
    <view class="form-item">
      <text class="item-label">支出日期</text>
      <picker name="date" mode="date" start="2020-01-01" end="2030-12-31">
        <view class="picker">
          {{dateValue || '请选择支出日期'}}
        </view>
      </picker>
    </view>
    <button form-type="submit" class="submit-btn">确认添加</button>
  </form>
</view>