/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f4f4f4;
  min-height: 100vh;
}

.dashboard {
  width: 100%;
  margin-bottom: 30rpx;
}

.summary-card {
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 40rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.scan-button-container {
  padding: 20rpx;
  display: flex;
  gap: 20rpx;
  flex-direction: column;
}

.scan-button {
  background-color: #3498db;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 0;
}

.list-button {
  background-color: #28a745;
  color: white;
  border-radius: 8rpx;
  padding: 20rpx 0;
}

.income, .expense {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 40rpx;
  font-weight: bold;
}

.income .amount {
  color: #28a745;
}

.expense .amount {
  color: #dc3545;
}

.fish-list-container {
  width: 100%;
  background-color: white;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-tabs {
  display: flex;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 4rpx;
  min-width: 300rpx;
}

.tab-item {
  padding: 12rpx 24rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.3s ease;
  cursor: pointer;
  flex: 1;
  text-align: center;
  white-space: nowrap;
  min-width: 90rpx;
}

.tab-item.active {
  color: #fff;
  font-weight: 500;
  transform: translateY(-1rpx);
}

/* 未出售状态选中 - 蓝色 */
.tab-item.active[data-tab="instock"] {
  background-color: #3498db;
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.3);
}

/* 已出售状态选中 - 绿色 */
.tab-item.active[data-tab="sold"] {
  background-color: #1aad19;
  box-shadow: 0 2rpx 8rpx rgba(26, 173, 25, 0.3);
}

/* 死亡状态选中 - 红色 */
.tab-item.active[data-tab="dead"] {
  background-color: #e74c3c;
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.3);
}

.tab-item:not(.active):hover {
  color: #333;
  background-color: rgba(255, 255, 255, 0.5);
}

.fish-list {
  height: calc(100vh - 450rpx); /* Adjust height based on your layout */
}

.fish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.fish-info .fish-id {
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.fish-info .fish-date {
  font-size: 24rpx;
  color: #999;
}

.fish-status {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: white;
}

.fish-status.status-instock {
  background-color: #3498db;
}

.fish-status.status-sold {
  background-color: #1aad19;
}

.fish-status.status-dead {
  background-color: #e74c3c;
}

.empty-list {
  text-align: center;
  padding: 50rpx;
  color: #999;
}